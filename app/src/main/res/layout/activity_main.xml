<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef5350"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">




    <androidx.gridlayout.widget.GridLayout
        android:layout_width="330dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">


        <ImageButton
            android:id="@+id/homeScreen"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:onClick="homeScreen"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/alphabets"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:onClick="alphabetScreen"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/alphabet" />

        <ImageButton
            android:id="@+id/words"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:onClick="wordScreen"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/words" />


        <ImageButton
            android:id="@+id/quiz"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:onClick="quizScreen"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/quiz" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:onClick="settingsScreen"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/setting" />

        <ImageButton
            android:id="@+id/aboutus"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:onClick="aboutusScreen"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/aboutus" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
